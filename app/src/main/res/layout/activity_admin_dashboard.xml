<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Header -->

        <!-- Add Product -->
        <TextView
            android:id="@+id/txtAdminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Admin Dashboard"
            android:textColor="@color/pizza_white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#bab6b7"
            android:text="Add Product"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- View Products -->
        <Button
            android:id="@+id/btnViewProducts"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#bab6b7"
            android:text="View Products"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <!-- View Orders -->
        <Button
            android:id="@+id/btnViewOrders"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#bab6b7"
            android:text="View Orders"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <!-- View Deliveries (optional feature hook) -->
<!--        <Button-->
<!--            android:id="@+id/btnViewDeliveries"-->
<!--            android:text="ðŸšš View Deliveries"-->
<!--            android:textAllCaps="false"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:backgroundTint="#9C27B0"-->
<!--            android:textColor="#FFFFFF"-->
<!--            android:layout_marginBottom="12dp"/>-->

        <!-- Show Map -->
        <Button
            android:id="@+id/showMap"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#bab6b7"
            android:text="Show Locations (Map)"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <!-- Logout -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#D32F2F"
            android:text="Logout"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
